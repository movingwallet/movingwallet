        "security": [{"apiToken": []}],
        "summary": "Reintentar acción fallida",
        "responses": {
          "200": {
            "description": "Acción reintentada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/resumir-estado": {
      "post": {
        "tags": ["Inteligencia"],
        "operationId": "resumir_estado_actual",
        "security": [{"apiToken": []}],
        "summary": "Resumir estado actual",
        "responses": {
