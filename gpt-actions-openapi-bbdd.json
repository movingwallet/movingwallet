    },
    "/api/leer-google-doc": {
      "post": {
        "tags": ["Google"],
        "operationId": "leer_google_doc",
        "security": [{"apiToken": []}],
        "summary": "Leer documento de Google Docs",
        "responses": {
          "200": {
            "description": "Documento leído",
            "content": {
              "application/json": {
