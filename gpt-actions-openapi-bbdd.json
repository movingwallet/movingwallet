      }
    },
    "/api/verificar-consistencia": {
      "post": {
        "tags": ["Documentación"],
        "operationId": "verificar_consistencia_documentacion",
        "security": [{"apiToken": []}],
        "summary": "Verificar consistencia documentación",
        "responses": {
          "200": {
            "description": "Verificación completada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/generar-pitch": {
      "post": {
        "tags": ["Inteligencia"],
        "operationId": "generar_presentacion_pitch",
        "security": [{"apiToken": []}],
        "summary": "Generar presentación pitch",
        "responses": {
          "200": {
            "description": "Pitch generado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/gpt-inteligente": {
      "post": {
        "tags": ["Inteligencia"],
        "operationId": "gpt_acceso_inteligente",
        "security": [{"apiToken": []}],
        "summary": "Acceso inteligente a GPT",
        "responses": {
          "200": {
            "description": "Operación completada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
